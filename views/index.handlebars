<h1>Eat-Da-Burger</h1>

<h2>Devoured Burgers</h2>

<ul>
  {{#each burgers}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers to Eat</h2>

<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">To Eat</label><br>
    <input type="radio" name="sleepy" value="1" checked> To Eat!<br>
    <input type="radio" name="sleepy" value="0"> Already Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>
