

<div class="row" id="hero-header">
  <div class="col-md-12"<img src="../public/assets/images/burger.png" alt=""></div>
        <div class="col-md-12">
          <h1>Eat-Da-Burger</h1>
          </div>
        </div>



<div class="row" id="burger-list">
<div class="col-md-6" id="menu">
<h2>Burgers on the Menu</h2>

<ul id="">
  {{#each burgers}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

</div>

<div class="col-md-6" id="devoured">
<h2>Devoured Burgers</h2>

<ul id="eaten">
  {{#each burgers}}
    {{#unless sleepy}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

</div>
</div>

<div class="row" id="add-burgers">
 <div class="col-md-12" id="add">
 <h2>Add a Burger to the Menu</h2>
 </div>
</div>
 

<div class="row" id="input-form">
  <div class="col-md-4"></div>
  <div class="col-md-4">
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee"></label><br>
    <input type="radio" name="sleepy" value="1" checked> Add to Menu!<br>
    <input type="radio" name="sleepy" value="0"> Already Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>

</div>
<div class="col-md-4"></div>
</div>